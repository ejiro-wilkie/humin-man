@model Humin_Man.ViewModels.User.UpdateUserInputViewModel
<div class="row">
    <!-- left column -->
    <div class="col-md-12">
        <!-- general form elements -->
        <div class="card ">
            <div class="card-header">
                <h3 class="card-title">
                    <span>Update</span>
                </h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <form name="companyForm" asp-action="Update" asp-controller="User">
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label asp-for="@Model.FirstName"></label>
                                <input class="form-control" asp-for="FirstName" required="required" />
                                <span asp-validation-for="FirstName" class="text-danger small float-left mb-1"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="@Model.LastName"></label>
                                <input class="form-control" asp-for="LastName" required="required" />
                                <span asp-validation-for="LastName" class="text-danger small float-left mb-1"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label asp-for="@Model.Email"></label>
                                <input class="form-control" asp-for="Email" required="required" />
                                <span asp-validation-for="Email" class="text-danger small float-left mb-1"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="@Model.UserName"></label>
                                <input class="form-control" asp-for="UserName" required="required" />
                                <span asp-validation-for="UserName" class="text-danger small float-left mb-1"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <!-- text input -->
                            <div class="form-group">
                                <label asp-for="@Model.Password"></label>
                                <input class="form-control" asp-for="Password"  />
                                <span asp-validation-for="Password" class="text-danger small float-left mb-1"></span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="@Model.ConfirmPassword"></label>
                                <input class="form-control" asp-for="ConfirmPassword" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger small float-left mb-1"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <label asp-for="@Model.PhoneNumber"></label>
                                <input class="form-control" asp-for="PhoneNumber" required="required" />
                                <span asp-validation-for="PhoneNumber" class="text-danger small float-left mb-1"></span>
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary float-right">Save</button>

                </form>
            </div>
        </div>
    </div>
</div>

