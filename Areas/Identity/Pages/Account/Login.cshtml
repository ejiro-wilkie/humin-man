@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="login-box">
    <div class="login-logo">
        <a href="javascript:;"><b>Humin </b> Man</a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
        <div class="card-body login-card-body">
            <p class="login-box-msg">Sign in to start your session</p>
            <p asp-validation-summary="All" class="text-danger"></p>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
            <form id="account" method="post">
                <span asp-validation-for="Input.Email" class="text-danger pb-2"></span>

                <div class="input-group mb-3">
                    <input asp-for="Input.Email" type="email" class="form-control" placeholder="Email">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-envelope"></span>
                        </div>
                    </div>
                </div>
                <div class="input-group mb-3">
                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="Password">
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <span class="fas fa-lock"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="icheck-primary">
                            <label asp-for="Input.RememberMe">
                                <input asp-for="Input.RememberMe"/>
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                    </div>
                    <!-- /.col -->
                </div>
            </form>
        </div>
        <!-- /.login-card-body -->
    </div>
</div>

@section Styles {
    <style>
        .login-box {
            width: 60vh;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $("body").removeClass("sidebar-mini").addClass("login-page");
        $("body > .wrapper").removeClass("wrapper");
    </script>
}
